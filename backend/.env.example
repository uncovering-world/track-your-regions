# =============================================================================
# Track Your Regions — Backend Environment Variables
# =============================================================================
# Copy to .env and fill in your values

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=track_regions
DB_USER=postgres
DB_PASSWORD=postgres

# JWT secret — MUST be changed in production!
# Generate with: openssl rand -base64 32
JWT_SECRET=dev-secret-change-in-production

# Frontend URL (for OAuth redirects and email verification links)
FRONTEND_URL=http://localhost:5173

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Apple Sign-In (optional, untested)
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# Email / SMTP (optional in dev — falls back to console logging)
# See docs/tech/email-setup.md for production setup instructions
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@yourdomain.com

# OpenAI (optional, for AI features)
OPENAI_API_KEY=
