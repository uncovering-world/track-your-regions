# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=track_regions
DB_USER=postgres
DB_PASSWORD=postgres

# Backend
BACKEND_PORT=3001

# =============================================================================
# Authentication
# =============================================================================

# JWT secret for signing tokens - MUST be changed in production!
# Generate with: openssl rand -base64 32
JWT_SECRET=dev-secret-change-in-production

# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:5173

# Google OAuth (optional - leave empty to disable)
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Redirect URI: http://localhost:3001/api/auth/google/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Apple Sign-In (optional - TODO: untested, requires Apple Developer account)
# See docs/authentication.md for setup instructions
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# =============================================================================

# Martin Vector Tile Server
MARTIN_PORT=3000

# OpenAI API (for AI-assisted region grouping)
OPENAI_API_KEY=sk-your-api-key-here

# Frontend
VITE_API_URL=http://localhost:3001
VITE_MARTIN_URL=http://localhost:3000
